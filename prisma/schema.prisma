// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String
  description String?
  price Float
  stock Int
  images String[]
  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
   avaiableStock Boolean?
}

model Category {
  id String @id @default(uuid())
  name String
  description String?
  products Product[]
}

model Coupon {
  id String @id @default(uuid())
  code String
  discount Int
}

model Address {
  id String @id @default(uuid())
  country String
  cep String
  address String
  number Int
  state String
  city String
  neighborhood String
  userId String

  users User @relation(fields: [userId], references: [id])
  
}

model User {
  id String @id @default(uuid())
 name String
  surname String
  email String
  phone String
  cpf String
  nickname String?
  orders Order[]
  address Address[]
}

model Order {
  id String @id @default(uuid())
  date String
  status String
  amount Float
  paymentMethod String
  voucher String
  paymentIntent String
  quantity Int
  userIp String?
  userId String
  user User @relation(fields: [userId], references: [id])
  products String[]
}

model Nenbot {
  id String @id @default(uuid())
  name String
  key String
  days Int
}

model AvaibleBots {
  id String @id @default(uuid())
  dashbot Boolean
  nenbot Boolean
}

model Newsletter {
  id String @id @default(uuid())
  text String
}